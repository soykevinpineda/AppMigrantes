@using Migrantes.Models.DTO
@using Migrantes.ViewModels
@model Migrantes.ViewModels.FiadorViewModel

@{
    ViewData["Title"] = "Eliminar fiador";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> oSexos = ViewBag.Sexos;
    List<PersonaDTO> NombreDeLaPersona = ViewBag.NombresPersona;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<!--Formulario para eliminar fiador.-->
<div class="container-fluid">

    <div class="row align-self-center">
        <div class="col">
            <div>
                <a class="btn btn-outline-primary" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
            </div>
        </div>
        <div class="col-auto justify-content-center">
            <div class="text-center" style="font-family:Helvetica;">
                <h2 class="text-primary"><strong>@ViewData["Title"]</strong></h2>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
    <hr>

    @foreach (var item in NombreDeLaPersona)
    {
        <div class="align-content-center" data-bs-toggle="tooltip" data-bs-placement="top" title="Persona seleccionada">
            <center>
                <img src="~/persona.png" width="35" height="35" />
                <h3 class="text-center text-dark"><strong>@item.per_primer_nom @item.per_primer_ape @item.per_segundo_ape </strong></h3>

            </center>
        </div>
    }
    <br />
    <br />

    <div class="row justify-content-center">
        <form asp-controller="Fiador" asp-action="EliminarFiadorConfirmado" style="font-family:Helvetica" class="form-group" method="post" id="frm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.per_codigo_id" value="@ViewBag.PersonaID"/>
            <div class="form-group">
                <input type="hidden" asp-for="per_codigo_id" class="form-control text-center" />
                <input type="hidden" asp-for="FiadorID" class="form-control text-center" />
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <strong style="color:hsl(200, 18%, 46%)">
                        <label class="form-group row justify-content-center mb-0" asp-for="PrimerNombreDelFiador"></label>
                    </strong>
                    <input disabled asp-for="PrimerNombreDelFiador" class="form-control" />
                    <span asp-validation-for="PrimerNombreDelFiador" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <strong style="color:hsl(200, 18%, 46%)">
                        <label class="form-group row justify-content-center mb-0" asp-for="SegundoNombreDelFiador"></label>
                    </strong>
                    <input disabled asp-for="SegundoNombreDelFiador" class="form-control" />
                    <span asp-validation-for="SegundoNombreDelFiador" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <strong style="color:hsl(200, 18%, 46%)">
                        <label class="form-group row justify-content-center mb-0" asp-for="ApellidosDelFiador"></label>
                    </strong>
                    <input disabled asp-for="ApellidosDelFiador" class="form-control" />
                    <span asp-validation-for="ApellidosDelFiador" class="text-danger"></span>
                </div>
            </div>
            <br />
            <center>
                <div class="form-group">
                    <form asp-action="EliminarFiadorConfirmado" asp-controller="Fiador" method="post" id="frm" type="submit">
                        <button asp-for="per_codigo_id" value="@ViewBag.PersonaID" type="button" class="btn btn-danger"
                                onclick="Eliminar()">
                            <i class="fa-solid fa-trash-can"></i>&nbsp;Eliminar
                        </button>
                    </form>
                </div>
            </center>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/generic.js"></script>
    <script src="~/js/sweetalert.js"></script>

    <script>
        function Eliminar() {
            var frm = document.getElementById("frm");
            MostrarModalDelete().then(res => {
                if (res.value) {
                    frm.submit();
                    MostrarSuccessEliminar();
                }
            })
        }

        $(document).ready(function() {
            $('.toast').toast('show');
        });

        $('.toast').toast(option)
    </script>
}