<div class="box">
    <div style="margin-left:0px;">
        <div class="container-fluid">
            <div class="row justify-content-center" style="align-items:baseline;">
                <img src="~/persona.png" width="24" height="24" /> &nbsp;
                <div class="p-1 shadow-2 rounded-3 mb-2" style="font-family:Helvetica;border-radius:9px;">
                    <h2 class="text-primary"><strong>@ViewData["Title"]</strong></h2>
                </div>
            </div>
            <hr>
            <br />
            <div class="row justify-content-center" style="font-family:Helvetica;">
                <div style="text-align:center" class="offset-sm-0">
                    <input type="hidden" asp-for="per_codigo_id" />

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_primer_nom" class="control-label"></label>
                                </strong>
                                <input readonly asp-for="per_primer_nom" class="form-control text-center" />
                                <span asp-validation-for="per_primer_nom" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_segundo_nom" class="control-label"></label>
                                </strong>
                                <input readonly asp-for="per_segundo_nom" class="form-control text-center" />
                                <span asp-validation-for="per_segundo_nom" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_primer_ape" class="control-label"></label>
                                </strong>
                                <input readonly asp-for="per_primer_ape" class="form-control text-center" />
                                <span asp-validation-for="per_primer_ape" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_segundo_ape" class="control-label"></label>
                                </strong>
                                <input readonly asp-for="per_segundo_ape" class="form-control text-center" />
                                <span asp-validation-for="per_segundo_ape" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <form asp-action="Delete" id="frm">
                            <input type="hidden" asp-for="per_codigo_id" />
                            <input type="button" value="Eliminar" class="btn btn-danger" onclick="Eliminar()" />
                        </form>
                        <br />
                        <a class="btn btn-outline-primary" style="justify-items:right;" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/generic.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script>
        function Eliminar() {
            var frm = document.getElementById("frm");
            MostrarModalDelete().then(res => {
                if (res.value) {
                    frm.submit();
                    MostrarSuccessEliminar();
                }
            })
        }

