@using Migrantes.Models.DTO
@model Migrantes.Models.Entities.Persona

@{
    ViewData["Title"] = "Editar persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> SexosSelect = ViewBag.SexoEditar;
    List<SelectListItem> EstCivilSelect = ViewBag.EstCivilEditar;
}

<!-- Sidenav -->
<div id="mySidenav" class="sidenav">
    <a class="d-inline-block" asp-controller="Documentos" asp-action="DocumentosDisponibles" asp-route-id="@ViewBag.IdPersona" id="about">
        Documentos  &nbsp;&nbsp; &nbsp;&nbsp;<img style="width:40px;height:40px" src="~/id-card (2).png" />
    </a>
    <a class="d-inline-block" asp-controller="DatosFamiliares" asp-action="DetallesDatosFamiliares" asp-route-id="@ViewBag.IdPersona" id="blog">
        Familiares &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;<img style="width:40px;height:40px" src="~/family (2).png" />
    </a>
    <a class="d-inline-block" asp-controller="Fiador" asp-action="DetallesFiador" asp-route-id="@ViewBag.IdPersona" id="projects">
        Fiador &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img style="width:40px;height:40px" src="~/usuario (1).png" />
    </a>
    <a class="d-inline-block" asp-controller="Documentos" asp-action="DocumentosDisponibles" asp-route-id="@ViewBag.IdPersona" id="contact">
        Contacto &nbsp;&nbsp;&nbsp;&nbsp;  &nbsp;&nbsp; &nbsp;&nbsp;<img style="width:40px;height:40px" src="~/contactos (1).png" />
    </a>
</div>

<!-- Formulario para editar a la persona -->
<div class="box" style="margin-left:52px;">
    <div class="container-fluid">
        <div class="row justify-content-center" style="align-items:baseline;">
            <img src="~/persona.png" width="24" height="24" /> &nbsp;
            <div class="p-1 shadow-2 rounded-3 mb-2" style="font-family:Helvetica;border-radius: 9px;">
                <h2 class="text-primary"><strong>@ViewData["Title"]</strong></h2>
            </div>
        </div>
        <hr>
        <br />
        <div class="row justify-content-center" style="font-family:Helvetica;">
            <div style="text-align:center" class="offset-sm-0">
                <form style="font-family:Helvetica;" asp-action="Edit" id="frm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="per_codigo_id" />

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_primer_nom" class="control-label"></label>
                                </strong>
                                <input asp-for="per_primer_nom" class="form-control text-center" />
                                <span asp-validation-for="per_primer_nom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_segundo_nom" class="control-label"></label>
                                </strong>
                                <input asp-for="per_segundo_nom" class="form-control text-center" />
                                <span asp-validation-for="per_segundo_nom" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_primer_ape" class="control-label"></label>
                                </strong>
                                <input asp-for="per_primer_ape" class="form-control text-center" />
                                <span asp-validation-for="per_primer_ape" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_segundo_ape" class="control-label"></label>
                                </strong>
                                <input asp-for="per_segundo_ape" class="form-control text-center" />
                                <span asp-validation-for="per_segundo_ape" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_apellido_cas" class="control-label"></label>
                                </strong>
                                <input asp-for="per_apellido_cas" class="form-control text-center" />
                                <span asp-validation-for="per_apellido_cas" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_fecha_nac" class="control-label"></label>
                                </strong>
                                <input asp-for="per_fecha_nac" class="form-control text-center" />
                                <span asp-validation-for="per_fecha_nac" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_codpai_nacimiento" class="control-label"></label>
                                </strong>
                                <input asp-for="per_codpai_nacimiento" class="form-control text-center" />
                                <span asp-validation-for="per_codpai_nacimiento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_sexo" class="control-label"></label>
                                </strong>
                                <select asp-for="per_sexo" asp-items="@SexosSelect" class="form-control text-center"> </select>
                                <span asp-validation-for="per_sexo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_estado_civil" class="control-label"></label>
                                </strong>
                                <select asp-for="per_estado_civil" asp-items="@EstCivilSelect" class="form-control text-center"> </select>
                                <span asp-validation-for="per_estado_civil" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_codpai_nacionalidad" class="control-label"></label>
                                </strong>
                                <input asp-for="per_codpai_nacionalidad" class="form-control text-center" />
                                <span asp-validation-for="per_codpai_nacionalidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_profesion" class="control-label"></label>
                                </strong>
                                <input asp-for="per_profesion" class="form-control text-center" />
                                <span asp-validation-for="per_profesion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_telefono_movil" class="control-label"></label>
                                </strong>
                                <input asp-for="per_telefono_movil" class="form-control text-center" />
                                <span asp-validation-for="per_telefono_movil" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_telefono_interno" class="control-label"></label>
                                </strong>
                                <input asp-for="per_telefono_interno" class="form-control text-center" />
                                <span asp-validation-for="per_telefono_interno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_email" class="control-label"></label>
                                </strong>
                                <input asp-for="per_email" class="form-control text-center" />
                                <span asp-validation-for="per_email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_email_interno" class="control-label"></label>
                                </strong>
                                <input asp-for="per_email_interno" class="form-control text-center" />
                                <span asp-validation-for="per_email_interno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_observaciones" class="control-label"></label>
                                </strong>
                                <input asp-for="per_observaciones" class="form-control text-center" />
                                <span asp-validation-for="per_observaciones" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_usuario_grabacion" class="control-label"></label>
                                </strong>
                                <input asp-for="per_usuario_grabacion" class="form-control text-center" />
                                <span asp-validation-for="per_usuario_grabacion" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <strong style="color:#424242">
                                    <label asp-for="per_fecha_grabacion" class="control-label"></label>
                                </strong>
                                <input asp-for="per_fecha_grabacion" class="form-control text-center" />
                                <span asp-validation-for="per_fecha_grabacion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
                <br />
                <div class="form-group">
                    <input type="button" onclick="Editar()" value="Actualizar información" class="btn btn-success" />
                    <br />
                    <br />
                    <a class="btn btn-outline-primary" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/generic.js"></script>
    <script src="~/js/sweetalert.js"></script>

    <script>
        function Editar() {
            var frm = document.getElementById("frm");
            MostrarModalEdit().then(res => {
                if (res.value) {
                    frm.submit();
                    MostrarSuccessEdit();
                }
            })
        }

        $(document).ready(function() {
            $('.toast').toast('show');
        });

        $('.toast').toast(option)
    </script>
}