                    <label  class="form-group row justify-content-center mb-0" asp-for="per_otros_nom"></label>
                </strong>
                <input asp-for="per_otros_nom" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_otros_nom" class="text-danger"></span>
