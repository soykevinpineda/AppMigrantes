<div class="row">
    <div class="col" style="text-align:left">
        <div class="p-1 shadow-2 rounded-3 mb-2" style="font-family:Helvetica;border-radius: 9px;">
            <h2 class="text-primary"><strong>@ViewData["Title"]</strong></h2>
        </div>
    </div>
    <div class="col" style="text-align:right">
        <a class="btn btn-outline-primary" style="justify-items:right;" asp-controller="Personas" asp-action="Personas">Lista de personas</a>
    </div>
</div>
<hr>


<div style="justify-content:center;display:flex;align-items:center;font-family:Helvetica" class="mb-2">
    <div class="toast" data-delay="5000" style="border:thin;color:blue;border-radius: 9px;" role="alert" aria-live="assertive" aria-atomic="true">
        <div style="background:#007bff" class="toast-header">
            <img src="~/img/scblancopeque-200x91.png" style="width:10%;height:10%" class="rounded mr-2" alt="..." />
            <strong class="mr-auto text-white">Notificación SC</strong>
            <small class="text-white">justo ahora</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            <h4 class="text-primary text-center">
                Recuerda que los campos en
                <strong style="color:grey">*</strong>
                son requeridos.
            </h4>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <form style="font-family:Helvetica" class="form-group" asp-controller="Personas" asp-action="GuardarPersona" method="post" id="frm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label class="form-group text-left row justify-content-center mb-0" asp-for="per_primer_ape"></label>
                </strong>
                <input asp-for="per_primer_ape" class="form-control" />
                <span asp-validation-for="per_primer_ape" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_segundo_ape"></label>
                </strong>
                <input asp-for="per_segundo_ape" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_segundo_ape" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label class="form-group row justify-content-center mb-0" asp-for="per_apellido_cas"></label>
                </strong>
                <input asp-for="per_apellido_cas" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_apellido_cas" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_primer_nom"></label>
                </strong>
                <input asp-for="per_primer_nom" class="form-control" />
                <span asp-validation-for="per_primer_nom" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_segundo_nom"></label>
                </strong>
                <input asp-for="per_segundo_nom" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_segundo_nom" class="text-danger"></span>
