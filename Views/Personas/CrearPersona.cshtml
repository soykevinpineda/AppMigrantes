            </div>

            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_email_interno"></label>
                </strong>
                <input asp-for="per_email_interno" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_email_interno" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_telefono_movil"></label>
                </strong>
                <input   asp-for="per_telefono_movil" class="form-control" />
                <span asp-validation-for="per_telefono_movil" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label  class="form-group row justify-content-center mb-0" asp-for="per_telefono_interno"></label>
                </strong>
                <input   asp-for="per_telefono_interno" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_telefono_interno" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <strong style="color:hsl(200, 18%, 46%)">
                    <label class="form-group row justify-content-center mb-0" asp-for="per_observaciones"></label>
                </strong>
                <input type="text" asp-for="per_observaciones" class="form-control" style="width: 100%; height: 100px;" placeholder="Opcional" />
                <span asp-validation-for="per_observaciones" class="text-danger"></span>
            </div>
        </div>

        <div style="width:100%;padding:0 25% 0 25%" class="form-group">
            <input type="button" value="Crear persona" onclick="Guardar()" class="btn btn-success btn-block" />
        </div>
    </form>
</div>

<br />
<caption>
    <strong class="text-success">
        Formulario de ingreso.
        <br /><strong class="text-danger">Powered by </strong><strong style="color:black;font-family:Helvetica">--Sourcing-Corp &copy;--</strong>
    </strong>
</caption>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/generic.js"></script>
    <script src="~/js/sweetalert.js"></script>

    <script>
        function Guardar() {
            var frm = document.getElementById("frm");
            MostrarModal().then(res => {
                if (res.value) {
                    frm.submit();
                    MostrarSuccess();
                }
            })
        }

        $(document).ready(function() {
            $('.toast').toast('show');
        });

        $('.toast').toast(option)
    </script>
}