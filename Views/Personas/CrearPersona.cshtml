                <span asp-validation-for="per_primer_ape" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <strong style="color:hsl(0, 0%, 50%)">
                    <label class="form-group row justify-content-center mb-0" asp-for="per_segundo_ape"></label>
                </strong>
                <input style="border:1px solid;color:black" asp-for="per_segundo_ape" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_segundo_ape" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <strong style="color:hsl(0, 0%, 50%)">
                    <label class="form-group row justify-content-center mb-0" asp-for="per_apellido_cas"></label>
                </strong>
                <input style="border:1px solid;color:black" asp-for="per_apellido_cas" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="per_apellido_cas" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong style="color:hsl(0, 0%, 50%)">
                    <label class="form-group row justify-content-center mb-0" asp-for="per_primer_nom"></label>
                </strong>
                <input style="border:1px solid;color:black" asp-for="per_primer_nom" class="form-control" />
