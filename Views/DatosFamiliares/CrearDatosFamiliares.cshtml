<!-- Formulario para registrar a un familiar -->
<form class="form-group" asp-controller="DatosFamiliares" asp-action="AgregandoDatosFamiliares" method="post" id="frm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="per_codigo_id" value="@ViewBag.PersonaID" />
    <div class="form-group">
        <input type="hidden" asp-for="per_codigo_id" class="form-control text-center" />
    </div>
    
    <section class="w-full px-8 py-1 bg-gray-100 xl:px-8">
        <div class="max-w-5xl mx-auto">
            <div class="flex flex-col items-center md:flex-row">
                <div class="w-full space-y-5 md:w-3/5 md:pr-2">
                    <p class="font-medium text-blue-500 uppercase">Formulario para agregar a un familiar</p>
                    <h2 class="text-2xl font-extrabold leading-none text-black sm:text-3xl md:text-5xl">
                        Migrantes APP.
                    </h2>
                    <p class="text-xl text-gray-600 md:pr-16">Powered by Sourcing-Corp &copy;</p>
                    <br />
                    <span asp-validation-for="ParienteID" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="PrimerNombreFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="SegundoNombreFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="ApellidosFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="FechaNacimientoDelFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="PaisNacimientoDelFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="TelefonoDelFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="EmaiDelFamiliar" class="text-danger"></span>
                    <br />
                    <span asp-validation-for="ProfesionDelFamiliar" class="text-danger"></span>
                </div>

                <div class="w-full mt-16 md:mt-0 md:w-4/5">
                    @foreach (var item in NombreDeLaPersona)
                    {
                        <div id="TituloPer" data-bs-toggle="tooltip" data-bs-placement="top" title="Persona seleccionada">
                            <center>
                                <img src="~/persona.png" width="35" height="35" />
                                <h3 class="text-dark"><strong>@item.per_primer_nom @item.per_segundo_nom @item.per_primer_ape @item.per_segundo_ape</strong></h3>
                            </center>
                        </div>

                    }
                    <br />
                    <!-- Notificación SC -->
                    <div style="justify-content:center;display:flex;align-items:center;font-family:Helvetica" class="mb-2">
                        <div class="toast" data-delay="4000" style="border:thin;color:blue;border-radius: 9px;" role="alert" aria-live="assertive" aria-atomic="true">
                            <div style="background:#007bff" class="toast-header">
                                <img src="~/img/scblancopeque-200x91.png" style="width:10%;height:10%" class="rounded mr-2" alt="..." />
                                <strong class="mr-auto text-white">Notificación SC</strong>
                                <small class="text-white">justo ahora</small>
                                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="toast-body">
                                <h4 class="text-primary text-center" style="font-size:1.5rem">
                                    Recuerda que los campos en
                                    <strong style="color:grey">*</strong>
                                    son requeridos.
                                </h4>
                            </div>
                        </div>
                    </div>
                    <br />

                    <!-- Formulario para registrar a un familiar-->
                    <div class="relative z-10 h-auto p-8 py-10 overflow-hidden bg-white border-b-2 border-gray-300 rounded-lg shadow-2xl px-7">

                        <div class="row">
                            <div class="col-12">
                                <label>* Familiar</label>
                                <select asp-for="ParienteID" asp-items="@SelectPariente" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio"></select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>* Primer nombre</label>
                                <input type="text" asp-for="PrimerNombreFamiliar" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">
                            </div>
                            <div class="col-6">
                                <label>* Segundo nombre</label>
                                <input type="text" asp-for="SegundoNombreFamiliar"  class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <label>* Apellidos </label>
                                <input type="text" asp-for="ApellidosFamiliar" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">
                            </div>
                        </div>

                         <div class="row">
                            <div class="col-6">

                                <label>* Fecha de nacimiento</label>
                                <input type="date" asp-for="FechaNacimientoDelFamiliar" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">

                                 <label>* Teléfono </label>
                                <input type="number" asp-for="TelefonoDelFamiliar" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">

                                    <label> E-mail </label>
                                 <input type="email" asp-for="EmaiDelFamiliar" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="example@correo.com">
                                
                            </div>

                            <div class="col-6">
                                <label>* Pais de nacimiento</label>
                                <input asp-for="PaisNacimientoDelFamiliar" type="text" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Obligatorio">

                                 <label> Teléfono alternativo </label>
                                <input asp-for="TelefonoAlternativoFamiliar" type="number" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Opcional">

                                 <label> Profesión </label>
                                <input asp-for="ProfesionDelFamiliar" type="text" class="block w-full px-4 py-2 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-blue-500 focus:outline-none" placeholder="Opcional">
                            </div>
                        </div>


                        <div class="block">
                            <button name="Guardar familiar" value="Guardar familiar" class="w-full px-3 py-4 font-medium text-white bg-blue-600 rounded-lg">Agregar familiar</button>
                        </div>
                        <p class="w-full mt-4 text-sm text-center text-gray-500">Desea regresar al menu principal? <a asp-controller="Personas" asp-action="Personas" class="text-blue-500 underline">Listado de personas</a></p>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

