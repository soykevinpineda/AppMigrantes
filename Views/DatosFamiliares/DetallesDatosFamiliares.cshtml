@using Migrantes.ViewModels
@model Migrantes.ViewModels.DatosFamiliaresViewModel

@{
    ViewData["TitleDatosFamiliares"] = "Datos de familiares";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<DatosFamiliaresViewModel> ListDatosFamiliares = ViewBag.ListDatosFam;
}



@*Si no tiene datos familiares se muestra mensaje y opcion para agregar datos*@
@if (ViewBag.IdDatosFam == null)
{
    <div class="alert alert-warning d-flex alert-dismissible fade show" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        @TempData["msjValidacionFamiliar"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span arie-hidden="true">&times;</span>
        </button>
    </div>

    <center>
        <div class="form-group">
            <a class="btn btn-primary" asp-controller="DatosFamiliares" asp-action="CrearDatosFamiliares" asp-route-id="@ViewBag.IdPersona">Agregar datos de familiares</a>
        </div>
    </center>
}


@*Si tiene datos familiares mostrar tarjetas de los padres.*@
else
{
    @foreach (var item in ListDatosFamiliares)
    {

        <center>
            <div class="p-2 shadow-2 rounded-3 mb-2" style="background-color: hsl(0, 0%, 94%);font-family:Helvetica;border-radius: 9px;width:fit-content;">
                <h2 class="text-center text-primary"><strong>@ViewData["TitleDatosFamiliares"]</strong></h2>
            </div>
            <hr>
        </center>

        <a class="btn btn-outline-primary" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
        <br />
        <br />

        <div class="align-content-center" id="TituloPer">
            <center>
                <img src="~/persona.png" width="50" height="50" />
                <h3 class="text-center text-dark"><strong>@item.per_primer_nom @item.per_primer_ape </strong></h3>
            </center>
        </div>
        <br />
        <br />
        <div class="box">
            <div class="card" style="width:230px;">
                <img src="~/Mujer.png" style="width:auto;height:auto;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><strong>Madre</strong></h5>
                    <p class="card-text">@item.nombres_madre @item.primer_apellido_madre @item.segundo_apellido_madre</p>
                    <br />
                    <h5 class="card-title"><strong>Profesión</strong></h5>
                    <p class="card-text">@item.profesion_madre</p>
                    <br />
                    <h5 class="card-title"><strong>Edad</strong></h5>
                    <p class="card-text">@item.edad_madre</p>
                </div>
            </div>

            <div class="card" style="width:230px;">
                <img src="~/Hombre.png" style="width:auto;height:auto;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><strong>Padre</strong></h5>
                    <p class="card-text">@item.nombres_padre @item.primer_apellido_padre @item.segundo_apellido_padre</p>
                    <br />
                    <h5 class="card-title"><strong>Profesión</strong></h5>
                    <p class="card-text">@item.profesion_padre</p>
                    <br />
                    <h5 class="card-title"><strong>Edad</strong></h5>
                    <p class="card-text">@item.edad_padre</p>
                </div>

                <style>
                    .box {
                        display: flex;
                        justify-content: space-evenly;
                       
                    }
                </style>
            </div>
        </div>
        <br />
        <br />

        <center>
            <div class="form-group">
                <a class="btn btn-primary" asp-controller="DatosFamiliares" asp-action="EditarDatosFamiliares" asp-route-id="@ViewBag.IdPersona">Editar</a>&nbsp;
                <a class="btn btn-danger" asp-controller="DatosFamiliares" asp-action="EliminarDatosFamiliares" asp-route-id="@ViewBag.IdPersona">Eliminar</a>
            </div>
        </center>
    }
}
