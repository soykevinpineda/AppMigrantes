<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Migrantes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/sideNav.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>


<body class="idbody">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3" style="background: linear-gradient(329deg, rgba(255,255,255,1) 0%, rgba(0,123,255,1) 50%);">
            <div class="container offset-sm-0" style="margin-bottom:0px">
                <a class="navbar-brand" asp-controller="Personas" asp-action="CrearPersona">
                    <img style="width:70px;height:2rem" src="~/img/scblancopeque-200x91.png" />
                </a>

                <button class="navbar-toggler" type="button" style="background: #007bff;" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <img style="width:100%;height:30px;" src="~/img/navbarmenu.png" />
                    </span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Personas" asp-action="Personas">Lista de candidatos</a>
                        </li>

                        <li class="nav-item justify-content-center">
                            <form asp-action="Personas" asp-controller="Personas" method="get" id="frmForm" style="font-family:Helvetica">
                                <div class="container justify-content-around">
                                    <div class="row">
                                        <div class="col-auto">
                                            <input placeholder=" Busca por nombres o apellidos..." class="search" style="border:1px solid;color:black;width:300px" type="text" name="oBuscador" value="@ViewData["Buscador"]" id="frmBuscar" />
                                        </div>
                                        &nbsp;
                                        <div class="row">
                                            <input type="submit" value="Buscar" class="btn btn-secondary" />
                                            <input type="submit" value="Limpiar" class="btn btn-danger" onclick="Limpiar()" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
                @*<partial name="_LoginPartial" />*@
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />

    <footer class="border-top footer text-muted center">
        <center>
            <div class="container center">
                <a style="color:black">Sourcing-Corp&copy; --Migrantes--</a>
            </div>
        </center>
    </footer>

    <style type="text/css">
        .search {
            border: 3px dotted #999;
            border-radius: 4px;
            height: 36px;
            -webkit-appearance: none;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
