@using Migrantes.Models.DTO
@model IEnumerable<DocumentosPersonaDTO>

@{
    ViewData["TitleDocumentos"] = "Documentos disponibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> TipoDocSelect = ViewBag.ListDoc;
    List<DocumentosPersonaDTO> DocumentosPersona = ViewBag.ListadoDocumentos;
    List<DocumentosPersonaDTO> NombreDeLaPersona = ViewBag.NombresPersona;
}

<!--Si la persona seleccionada tiene todos sus documentos,
se muestra una alerta -->
@if (TempData["msjDocsTotales"] != null)
{
    <div class="alert alert-warning d-flex alert-dismissible fade show" role="alert" style="font-size:large;font-family:Helvetica">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        &nbsp;@TempData["msjDocsTotales"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span arie-hidden="true">&times;</span>
        </button>
        <div>
        </div>
    </div>
}

<!--Si la persona seleccionada no tiene documentos,
se muestra una alerta y opción para agregar documentos-->
@if (@ViewBag.IdDocumento == 0)
{
    <div class="alert alert-warning d-flex alert-dismissible fade show" role="alert" style="font-size:large;font-family:Helvetica">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        &nbsp;@TempData["msjDocsDisponibles"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span arie-hidden="true">&times;</span>
        </button>
        <div>
        </div>
    </div>
    <hr>

    <center>
        <div class="form-group">
            <a class="btn btn-primary" asp-controller="Documentos" asp-route-id="@ViewBag.IdPersona" asp-action="CrearDocumento">Crear nuevo documento</a>&nbsp;
            <a class="btn btn-outline-primary" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
        </div>
    </center>
}


<!--Si la persona seleccionada tiene documentos,
se muestra tabla de los documentos disponibles-->
@if (@ViewBag.IdDocumento != 0)
{

    <div class="row">
        <div class="col" style="text-align:left">
            <div class="p-1 shadow-2 rounded-3 mb-2" style="font-family:Helvetica;border-radius: 9px;">
                <h2 class="text-primary"><strong>@ViewData["TitleDocumentos"]</strong></h2>
            </div>
        </div>
        <div class="col" style="text-align:right">
            <a class="btn btn-outline-primary" style="justify-items:right;" asp-controller="Personas" asp-action="Personas">Regresar a la lista</a>
        </div>
    </div>
    <hr>

    @foreach (var item in NombreDeLaPersona)
    {
        <div class="align-content-left" id="TituloPer" data-bs-toggle="tooltip" data-bs-placement="top" title="Persona seleccionada">
            <center>
                <img src="~/persona.png" width="50" height="50" />
                <h3 class="text-center text-dark"><strong>@item.per_primer_nom @item.per_segundo_nom @item.per_primer_ape @item.per_segundo_ape</strong></h3>
            </center>
        </div>
        <br />
        <br />
    }


    <div class="table-responsive text-nowrap">
        <form asp-action="ExportarDocsExcel" asp-controller="Documentos" id="FormChecks">
            <table class="table-light table-striped text-center table-hover table-sm table-responsive-xl pre-scrollable">
                <thead class="text-center" style="color:white">
                    <tr>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="ide_id_documento" />
                        </th>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="ide_numero" />
                        </th>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="ide_fecha_emision" />
                        </th>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="ide_fecha_vencimiento" />
                        </th>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="NombreImagenPortada_A" />
                        </th>
                        <th>
                            <input type="checkbox" checked name="nombrePropiedades" value="RutaImagenPortada_A" />
                            <input hidden type="checkbox" checked name="nombrePropiedades" value="NombreImagenPortada_B" />
                            <input hidden type="checkbox" checked name="nombrePropiedades" value="RutaImagenPortada_B" />
                        </th>
                        <th>
                        </th>
                    </tr>

                    <tr>
                        <th>
                            <strong>
                                Tipo de documento
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Número del documento
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Fecha emisión
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Fecha vencimiento
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Portada
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Contraportada
                            </strong>
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>

                <tbody class="table-light text-center">

                    @foreach (var item in Model)
                    {
                        <tr class="table">
                            <td>
                                @Html.DisplayFor(x => item.NombreDocumento)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.ide_numero)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.ide_fecha_emision)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.ide_fecha_vencimiento)
                            </td>
                            <td>
                                <img style="border:1px solid;border-radius:9px" src="@item.RutaImagenPortada_A" width="200" height="100" />

                            </td>
                            <td>
                                <img style="border:1px solid;border-radius:9px" src="@item.RutaImagenPortada_B" width="200" height="100" />

                            </td>

                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                                        <strong>
                                            Acciones
                                        </strong> <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                            Ver
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <a class="btn btn-outline-info" href=@item.RutaImagenPortada_A target="_blank"> Portada </a>
                                            <a class="btn btn-outline-info" href=@item.RutaImagenPortada_B target="_blank"> Contraportada </a>
                                        </ul>
                                        <a class="btn btn-warning" asp-controller="Documentos" asp-action="EditarDocumento" asp-route-id="@item.ide_id_persona"><i class="material-icons" style="font-size:14px">border_color</i>&nbsp;Editar</a>
                                        <a class="btn btn-secondary" asp-controller="Documentos" asp-action="DetallesDocumento" asp-route-id="@item.ide_id_persona"><i class="material-icons" style="font-size:14px">description</i>&nbsp;Detalles</a>
                                        <a class="btn btn-danger" asp-controller="Documentos" asp-action="EliminarDocumento" asp-route-id="@item.ide_id_persona"><i class="material-icons" style="font-size:14px">delete</i>&nbsp;Eliminar</a>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <style type="text/css">
                    thead tr th {
                        position: sticky;
                        top: 0;
                        z-index: 10;
                        background-color: #007bff;
                        font-family: Helvetica;
                    }

                    .table-responsive {
                        height: auto;
                    }
                </style>
            </table>

        </form>
    </div>
    <br />
    <hr>

    if (ViewBag.ListadoDocumentos.Count <= 2)
    {
        <center>
            <div class="form-group">
                <a class="btn btn-primary" asp-controller="Documentos" asp-action="CrearDocumento" asp-route-id="@ViewBag.IdPersona">Crear nuevo documento</a>&nbsp;
                <input type="button" class="btn btn-success btn-md" value="Exportar data a Excel"
               onclick="DescargarExcel()" />
            </div>
        </center>
    }

    if (ViewBag.ListadoDocumentos.Count == 3)
    {
        <center>
            <div class="form-group">
                <input type="button" class="btn btn-success btn-md" value="Exportar data a Excel"
               onclick="DescargarExcel()" />
            </div>
        </center>
    }

}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/generic.js"></script>
    <script src="~/js/sweetalert.js"></script>

    <script>
        function DescargarExcel() {
            var frmReporte = document.getElementById("FormChecks");
            frmReporte.submit();
        }

        function Limpiar() {
            document.getElementById("frmBuscar").value = "";
            document.getElementById("frmForm").submit();
        }

        $(document).ready(function() {
            $('.toast').toast('show');
        });

        $('.toast').toast(option)
    </script>
}


